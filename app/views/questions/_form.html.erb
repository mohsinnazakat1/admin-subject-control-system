  <%= form_with model: @question do |form| %>
  <div>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
    <br>

    <%= form.label :option1 %><br>
    <%= form.text_field :option1 %>
    <br>

    <%= form.label :option2 %><br>
    <%= form.text_field :option2 %>
    <br>

    <%= form.label :option3 %><br>
    <%= form.text_field :option3 %>
    <br>

    <%= form.label :option4 %><br>
    <%= form.text_field :option4 %>
    <br>

    <%= form.label :answer %><br>
    <%= form.text_field :answer %>
    <br>

    <%= form.select :quiz_id, Quiz.all.map{ |c| [c.title, c.id] } %>
    <% @question.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
